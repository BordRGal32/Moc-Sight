<%= render("layouts/errors", :object => @link) %>
<div class="hidden_form">

   <%= form_for(@link) do |f| %>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
            <%= f.label :url %>
            <%= f.text_field :url %>
        </div>
        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, size: "25x7" %>
        </div>
        <%= f.submit(:class => "btn btn-primary") %>
        <% end %>
</div>


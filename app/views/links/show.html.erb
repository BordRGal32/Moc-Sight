<h1><%= @link.name %></h1>
<h2><a href="http://<%=@link.url%>"><%=@link.url%></a></h2>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <%= link_to "Home", links_path, :class => "navbar-brand" %>
    <p class="pull-right navbar-text"><%= @link.name %> </p>
    <div class="btn-group-xs">
        <button type="button" class="new btn btn-default navbar-btn">Edit</button>
        <button type="button" class="btn btn-default navbar-btn">
            <%= link_to "Delete", link_path(@link), :class => "",
                                                    :confirm => "Are you sure?",
                                                    :method => "delete" %></button>
    </div>
</nav>
<hr>

<div class="hidden_form">
    <%= render 'form' %>
</div>


<hr>
<h3>Was This Link Helpful?</h3>

<form action="/links/<%=@link.id%>/votes" method="post">
    <input name="vote[vote_status]" value="1" type="hidden">
    <button class="btn btn-danger">Vote Up</button>
</form><br>

<form action="/links/<%=@link.id%>/votes" method="post">
    <input name="vote[vote_status]" value="-1" type="hidden">
    <button class="btn btn-danger">Vote Down</button>
</form>


